<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
             xmlns:a='urn:import:com.vaadin.polymer.app.widget'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
             xmlns:v='urn:import:com.vaadin.polymer.vaadin.widget'
        >

  <ui:style>
  </ui:style>

  <g:HTMLPanel addStyleNames="view3">
    <style>
     .view3 paper-material {
         margin: 20px;
         padding: 10px 25px 30px 25px;
      }
      .view3 paper-button {
         margin-top: 30px;
      }
    </style>
    <p:PaperMaterial elevation="3">
      <h3>ToDo Form</h3>
      <p:PaperInput ui:field="title" label="title"></p:PaperInput>
      <p:PaperTextarea ui:field="descr" label="description"></p:PaperTextarea>
      <v:VaadinDatePicker ui:field="date" label="date"></v:VaadinDatePicker>
      <p:PaperButton ui:field="submit" raised="true">Submit</p:PaperButton>
    </p:PaperMaterial>

    <p:PaperToast ui:field="toast"></p:PaperToast>
  </g:HTMLPanel>
</ui:UiBinder>
